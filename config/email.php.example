        // 8. Paste it above
        // ============================================
    }
    
    // Send email using Elastic Email API v4
    private function sendEmail($to_email, $subject, $html_body) {
        $url = 'https://api.elasticemail.com/v4/emails';
        
        $data = [
            'Recipients' => [
                ['Email' => $to_email]
            ],
            'Content' => [
                'From' => $this->from_email,
                'FromName' => $this->from_name,
                'Subject' => $subject,
                'Body' => [
                    [
                        'ContentType' => 'HTML',
                        'Content' => $html_body,
                        'Charset' => 'utf-8'
                    ]
                ]
            ]
        ];
        
        $headers = [
            'X-ElasticEmail-ApiKey: ' . $this->elastic_api_key,
            'Content-Type: application/json'
        ];
        
        $ch = curl_init();
        curl_setopt($ch, CURLOPT_URL, $url);
        curl_setopt($ch, CURLOPT_POST, true);
        curl_setopt($ch, CURLOPT_POSTFIELDS, json_encode($data));
        curl_setopt($ch, CURLOPT_HTTPHEADER, $headers);
        curl_setopt($ch, CURLOPT_RETURNTRANSFER, true);
        curl_setopt($ch, CURLOPT_SSL_VERIFYPEER, false); // For WAMP localhost
        
        $response = curl_exec($ch);
        $http_code = curl_getinfo($ch, CURLINFO_HTTP_CODE);
        
        if (curl_errno($ch)) {
            error_log("CURL Error: " . curl_error($ch));
            curl_close($ch);
            return false;
        }
        
        curl_close($ch);
        
        // Elastic Email returns 200 on success
        if ($http_code == 200 || $http_code == 201) {
            return true;
        } else {
            error_log("Elastic Email API Error: HTTP $http_code - Response: $response");
            return false;
        }
    }
    
